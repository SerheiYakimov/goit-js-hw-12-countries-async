<div class="country">
    {{#each this}}
    <div class="country-card">    
        <h2 class="country-name">{{this.name}}</h2>
        <p class="country-text">Capital:<span>{{this.capital}}</span></p>
        <p class="country-text">Population:<span>{{this.population}}</span></p>
        <ul class="country-text">Languages:
        {{#each this.languages}}
                <li class="language-item">{{this.name}}</li>
        {{/each}}
        </ul>
    </div>
    <div class="country-flag">
        <img src={{this.flag}} alt={{this.name}}>
    </div>
    {{/each}}
</div>